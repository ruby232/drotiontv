{
  "expo": {
    "plugins": [
      [
        "@react-native-tvos/config-tv",
        {
          "isTV": true,
          "androidTVRequired": true,
          "androidTVBanner": "./assets/tv_icons/mipmap-hdpi/ic_banner.png"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "newArchEnabled": false
          }
        }
      ],
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "name": "DrotionTV",
    "slug": "DrotionTV",
    "android": {
      "package": "com.onebyt.drotiontv"
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "52535bcc-9a27-4fa2-b4fb-b4a1b29dcfab"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/52535bcc-9a27-4fa2-b4fb-b4a1b29dcfab"
    },
    "icon": "./assets/tv_icons/mipmap-hdpi/ic_launcher.png",
    "splash": {
      "image": "./assets/tv_icons/mipmap-xxxhdpi/ic_banner.png",
      "resizeMode": "contain",
      "backgroundColor": "#25292e"
    },
    "ios": {
      "bundleIdentifier": "com.onebyt.drotiontv"
    }
  }
}
